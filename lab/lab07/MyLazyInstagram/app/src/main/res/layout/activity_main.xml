<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.lab05.pongmile.lazyinstagram.MainActivity"
    >

    <TextView
        android:id="@+id/textPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="8dp"
        android:text="Post"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/valuepost"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Follower"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintLeft_toRightOf="@+id/textPost"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

    <TextView
        android:id="@+id/textFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Following"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintLeft_toRightOf="@+id/textFollowing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

    <TextView
        android:id="@+id/textBio"
        android:layout_width="216dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Bio : bobo"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="139dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfile"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/buttonFollow"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Follow"
        app:layout_constraintBottom_toTopOf="@+id/textFollowing"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="76dp"
        android:layout_height="114dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toLeftOf="@+id/textPost"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/imageMulti"
        android:layout_width="142dp"
        android:layout_height="28dp"
        app:srcCompat="@android:drawable/ic_dialog_dialer"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textBio"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/imageSingle"
        android:layout_width="142dp"
        android:layout_height="28dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBio"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"/>

    <Spinner
        android:id="@+id/userSelect"
        android:layout_width="205dp"
        android:layout_height="24dp"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFollow"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.38" />

    <TextView
        android:id="@+id/valuepost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintTop_toTopOf="@+id/textFollowing"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/valuefollowing"
        android:layout_marginLeft="54dp" />

    <TextView
        android:id="@+id/valuefollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintTop_toTopOf="@+id/textFollower"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/valuepost"
        android:layout_marginLeft="82dp" />

    <TextView
        android:id="@+id/valuefollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintTop_toTopOf="@+id/textPost"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textBio"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="105dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMulti"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
